module.exports = {
  module: {
    rules: [
      {
        test: /\.css$/,
        use: [
          'style-loader?injectType=lazyStyleTag', // Lazy load the styles
          {
            loader: 'css-loader',
            options: {
              sourceMap: true,
            },
          },
          {
            loader: 'postcss-loader', // Process the CSS with postcss-loader
            options: {
              postcssOptions: {
                plugins: [
                  require('postcss-url')({
                    url: (asset) => {
                      // Modify the URL to adjust the font path
                      // Changing '../assets/fonts/' to '../../assets/fonts/'
                      if (asset.url.startsWith('../assets/fonts')) {
                        return asset.url.replace('../assets/fonts', '../../assets/fonts');
                      }
                      return asset.url;
                    },
                  }),
                ],
              },
            },
          },
        ],
      },
    ],
  },
};

// Webpack configuration for your library project
module.exports = {
  module: {
    rules: [
      {
        test: /\.css$/,
        use: [
          'style-loader?injectType=lazyStyleTag', // Lazy load CSS
          {
            loader: 'css-loader',
            options: {
              sourceMap: true,
            },
          },
          {
            loader: 'postcss-loader',
            options: {
              postcssOptions: {
                plugins: [
                  require('postcss-url')({
                    url: (asset) => {
                      // Rewrite ./fonts to ../../fonts
                      if (asset.url.startsWith('./fonts')) {
                        return asset.url.replace('./fonts', '../../fonts');
                      }
                      return asset.url;
                    }
                  })
                ]
              }
            }
          },
        ],
      },
    ],
  },
};

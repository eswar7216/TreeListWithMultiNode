import styles from 'style-loader?injectType=lazyStyleTag!css-loader!postcss-loader!@esi/leaf-design-tokens/lib/web/brands/evernorth/css/token_pbm.css';

module.exports = {
  plugins: [
    require('postcss-url')({
      url: (asset) => {
        // Rewrite ./fonts to ../../fonts
        if (asset.url.startsWith('./fonts')) {
          return asset.url.replace('./fonts', '../../fonts');
        }
        return asset.url;
      }
    })
  ]
};

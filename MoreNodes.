module.exports = {
  module: {
    rules: [
      {
        test: /\.css$/,
        use: [
          'style-loader?injectType=lazyStyleTag',
          {
            loader: 'css-loader',
            options: {
              sourceMap: true,
              importLoaders: 1, // Ensures that postcss-loader processes @import statements
            },
          },
          {
            loader: 'postcss-loader',
            options: {
              sourceMap: true, // Make sure source maps are enabled
              postcssOptions: {
                plugins: [
                  require('postcss-url')({
                    url: (asset) => {
                      // Rewrite URLs for fonts
                      if (asset.url.startsWith('../assets/fonts')) {
                        return asset.url.replace('../assets/fonts', '../../assets/fonts');
                      }
                      return asset.url;
                    },
                  }),
                ],
              },
            },
          },
        ],
      },
    ],
  },
};

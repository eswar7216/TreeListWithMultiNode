module.exports = {
  module: {
    rules: [
      {
        test: /\.css$/,
        use: [
          'style-loader?injectType=lazyStyleTag', // Lazy load the styles
          {
            loader: 'css-loader',
            options: {
              sourceMap: true,
            },
          },
          {
            loader: 'postcss-loader', // Process the CSS with postcss-loader
            options: {
              postcssOptions: {
                plugins: [
                  require('postcss-url')({
                    url: (asset) => {
                      // Adjust the URL to change '../assets/fonts/' to '../../assets/fonts/'
                      if (asset.url.includes('../assets/fonts')) {
                        return asset.url.replace('../assets/fonts', '../../assets/fonts');
                      }
                      return asset.url;
                    },
                  }),
                ],
              },
            },
          },
        ],
      },
      {
        test: /\.(woff|woff2|eot|ttf|otf)$/, // Match font files
        type: 'asset/resource', // Emit fonts as separate files
        generator: {
          filename: 'assets/fonts/[name].[hash][ext]', // Output path for fonts
        },
      },
    ],
  },
};


import styles from 'style-loader?injectType=lazyStyleTag!css-loader!postcss-loader!@esi/leaf-design-tokens/lib/web/brands/evernorth/css/token_pbm.css';

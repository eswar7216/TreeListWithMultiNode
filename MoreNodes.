module.exports = {
  module: {
    rules: [
      {
        test: /\.css$/, // Process .css files
        use: [
          'style-loader?injectType=lazyStyleTag', // Lazy-load the styles
          {
            loader: 'css-loader', // Process CSS files
            options: {
              sourceMap: true, // Enable source maps for better debugging
              url: true,       // Enable processing of URLs in CSS
              publicPath: '../../', // Modify the URL paths to prepend ../../
            },
          },
          'resolve-url-loader' // Ensure proper resolution of relative paths
        ],
      },
    ],
  },
};
